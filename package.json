{
    "name": "base",
    "version": "1.0.0",
    "main": "index.js",
    "author": "tomHopkins <tom@tom-hopkins.co.uk>",
    "license": "UNLICENSED",
    "copyright": "tomHopkins",
    "paths": {
        "src": {
            "base": "./source/",
            "css": "./source/css/",
            "fonts": "./source/fonts/",
            "js": "./source/js/src/",
            "vendorjs": "./source/js/vendor/",
            "img": "./source/images/",
            "svgicons": "./source/svgicons/",
            "patterns": "./source/_patterns/",
            "data": "./source/_data/",
            "meta": "./source/_meta/",
            "annotations": "./source/_annotations",
            "styleguide": "./node_modules/styleguidekit-assets-default/dist/",
            "patternlabFiles": "./node_modules/styleguidekit-mustache-default/views/"
        },
        "build": {
            "base": "./build/",
            "css": "./build/css/",
            "js": "./build/js/"
        },
        "public": {
            "base": "./public/",
            "css": "./public/css/",
            "fonts": "./public/fonts/",
            "js": "./public/js/",
            "img": "./public/images/",
            "patterns": "./public/patterns/",
            "data": "./public/styleguide/data/",
            "annotations": "./public/annotations/",
            "styleguide": "./public/styleguide/"
        },
        "production": {
            "base": "./html/",
            "css": "./html/css/",
            "fonts": "./html/fonts/",
            "js": "./html/js/",
            "img": "./html/images/"
        }
    },
    "vars": {
        "prodCssName": "main.min.css",
        "cssName": "main.css",
        "scssName": "main.scss",
        "prodJsName": "main.min.js",
        "bundledJsName": "bundled.js",
        "jsName": "index.js",
        "svgIconName": "svgicons.svg"
    },
    "pageExports": [
        "pages-index"
    ],
    "globs": {
        "distCss": [
            "./build/css/*.css",
            "./source/css/*.css"
        ]
    },
    "devDependencies": {
        "babel-core": "^6.26.0",
        "babel-loader": "^7.1.2",
        "babel-preset-es2015": "^6.24.1",
        "chalk": "^2.1.0",
        "fancy-log": "^1.3.0",
        "git-rev-sync": "^1.9.1",
        "gulp": "gulpjs/gulp#4.0",
        "gulp-autoprefixer": "^4.0.0",
        "gulp-cached": "^1.1.1",
        "gulp-concat": "^2.6.1",
        "gulp-cssnano": "^2.1.2",
        "gulp-header": "^1.8.9",
        "gulp-load-plugins": "^1.5.0",
        "gulp-newer": "^1.3.0",
        "gulp-plumber": "^1.1.0",
        "gulp-print": "^2.0.1",
        "gulp-sass": "^3.1.0",
        "gulp-size": "^2.1.0",
        "gulp-sourcemaps": "^2.6.1",
        "moment": "^2.18.1",
        "webpack-stream": "^4.0.0"
    },
    "optionalDependencies": {
        "webpack": "^3.5.5"
    }
}
